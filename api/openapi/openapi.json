  "paths": {
    "/players": {
      "post": {
        "tags": [
          "PlayerProfile"
        ],
        "summary": "Create a new player profile",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreatePlayerRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Player Profile created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CreatePlayerResponse"
                }
              }
            }
          }
        }
      }
    },
    "/readyz": {
      "get": {
        "tags": [
          "system"
        ],
        "summary": "Reports wheter the API is ready to accept requests",
        "parameters": [
          {
            "name": "verbose",
            "in": "query",
            "description": "vebrosity of the response",
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "API is ready and can accept requests",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ReadyzResponse"
                }
              }
            }
          },
          "503": {
            "description": "service is unavailable",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPError"
                }
              }
            }
          }
        }
      }
    }
  },
